datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
  email_confirmed Boolean
  is_admin Boolean
  created_at  DateTime
  updated_at  DateTime
  credentials Credentials @relation(fields: [credentials_id], references: [id])
  credentials_id  Int

}

model Credentials {
  id    Int     @id @default(autoincrement())
  hash  String
  created_at  DateTime
  updated_at  DateTime
  user User?

}
